<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.openatk.field_work.FarmerMenu">

    <TextView android:text="Farmer Name"
        android:layout_width="wrap_content"
        android:id="@+id/nFarm"
        android:textSize="25dp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/nFarm">
        <Button
            android:id="@+id/btnProf"
            android:width="300dp"
            android:text="Farmer Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <Button
            android:text="Crop Validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnProf"
            android:layout_marginTop="30dp"
            android:id="@+id/btnCSurvey"
            android:layout_alignRight="@+id/btnProf"
            android:layout_alignEnd="@+id/btnProf"
            android:layout_alignLeft="@+id/btnProf"
            android:layout_alignStart="@+id/btnProf" />

        <Button
            android:text="Monthly Monitoring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCSurvey"
            android:layout_marginTop="30dp"
            android:id="@+id/btnMSurvey"
            android:layout_alignRight="@+id/btnCSurvey"
            android:layout_alignEnd="@+id/btnCSurvey"
            android:layout_alignLeft="@+id/btnCSurvey"
            android:layout_alignStart="@+id/btnCSurvey" />
        <Button
            android:text="Recommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMSurvey"
            android:layout_marginTop="30dp"
            android:id="@+id/btnRec"
            android:layout_alignRight="@+id/btnMSurvey"
            android:layout_alignEnd="@+id/btnMSurvey"
            android:layout_alignLeft="@+id/btnMSurvey"
            android:layout_alignStart="@+id/btnMSurvey" />
        <Button
            android:text="Mill Data Import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRec"
            android:layout_marginTop="30dp"
            android:id="@+id/btnMillDataImport"
            android:layout_alignRight="@+id/btnMSurvey"
            android:layout_alignLeft="@+id/btnMSurvey"
            android:layout_alignStart="@+id/btnMSurvey" />
        <Button
            android:text="Farm Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMillDataImport"
            android:layout_marginTop="30dp"
            android:id="@+id/frmDetails"
            android:layout_alignRight="@+id/btnMillDataImport"
            android:layout_alignLeft="@+id/btnMillDataImport"
            android:layout_alignStart="@+id/btnMillDataImport" />

    </RelativeLayout>


</RelativeLayout>
